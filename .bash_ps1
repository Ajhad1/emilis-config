		ps -ef | grep ${SSH_AGENT_PID} | grep ssh-agent$ > /dev/null || {
			start_agent;
		}
	else
		eval "$(ssh-agent -k 2>/dev/null)"
	fi
else
	if [[ -f ~/.ssh/config ]]; then
		start_agent;
	else
		eval "$(ssh-agent -k 2>/dev/null)"
	fi
fi

